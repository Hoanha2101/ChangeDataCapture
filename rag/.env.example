# CDC + Incremental RAG Environment Variables

# ============================================================================
# PINECONE CONFIGURATION
# ============================================================================
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_INDEX_NAME=store-knowledge

# ============================================================================
# KAFKA CONFIGURATION
# ============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=pinecone-rag-consumer
KAFKA_CDC_TOPIC=mysql-server.rag_db.stores

# ============================================================================
# FASTAPI CONFIGURATION
# ============================================================================
FASTAPI_PORT=8000
FASTAPI_HOST=0.0.0.0

# ============================================================================
# DATABASE CONFIGURATION (for metadata tracking)
# ============================================================================
METADATA_DB_PATH=rag/update_metadata.db
RAG_METADATA_DB_PATH=rag/rag_metadata.db

# ============================================================================
# EMBEDDING MODEL
# ============================================================================
# Local embedding model (no API key needed)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ============================================================================
# CDC CONSUMER SETTINGS
# ============================================================================
CDC_CONSUMER_AUTO_START=false
CDC_CONSUMER_POLL_TIMEOUT_MS=1000
CDC_BATCH_SIZE=32

# ============================================================================
# OPTIONAL: External APIs (nếu muốn dùng thay vì local embeddings)
# ============================================================================
# OPENAI_API_KEY=your-openai-key
# COHERE_API_KEY=your-cohere-key
